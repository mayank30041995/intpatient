            <script>
                function openTab(evt, tabId) {
                    const contents = document.querySelectorAll('.tab-content');
                    const buttons = document.querySelectorAll('.tab-btn');

                    // Hide all tabs with blur-out animation
                    contents.forEach(c => {
                        c.classList.add('opacity-0', 'scale-95', 'blur-sm');
                        setTimeout(() => c.classList.add('hidden'), 250);
                    });

                    // Reset buttons
                    buttons.forEach(b => {
                        b.classList.remove(
                            'bg-green-600',
                            'text-white',
                            'shadow-[0_0_20px_rgba(34,197,94,0.6)]'
                        );
                        b.classList.add('bg-white/30', 'text-gray-100');
                    });

                    // Show active tab with glass reveal
                    const activeTab = document.getElementById(tabId);
                    setTimeout(() => {
                        activeTab.classList.remove('hidden');
                        requestAnimationFrame(() => {
                            activeTab.classList.remove('opacity-0', 'scale-95', 'blur-sm');
                            activeTab.classList.add('opacity-100', 'scale-100', 'blur-0');
                        });
                    }, 260);

                    // Active button glow
                    evt.currentTarget.classList.add(
                        'bg-green-600',
                        'text-white',
                        'shadow-[0_0_20px_rgba(34,197,94,0.6)]'
                    );
                    evt.currentTarget.classList.remove('bg-white/30', 'text-gray-100');
                }
            </script>
